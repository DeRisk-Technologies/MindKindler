rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- Helper Functions ---
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function getUserRole() {
      return request.auth.token.role != null ? request.auth.token.role : get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }

    function isSystemAdmin() {
      return isAuthenticated() && (
        getUserRole() in ['SuperAdmin', 'Admin', 'admin', 'superadmin']
      );
    }
    
    function isOwner(userId) {
       return isAuthenticated() && request.auth.uid == userId;
    }

    // --- 1. CORE USER & ROUTING ---
    
    // Allows users to read their own routing info to find their shard
    match /user_routing/{userId} {
      allow read: if isAuthenticated() && (request.auth.uid == userId || isSystemAdmin());
      allow write: if isAuthenticated() && (request.auth.uid == userId || isSystemAdmin());
    }

    // Users Collection (Profile)
    match /users/{userId} {
      // READ: Open to authenticated users (needed for directories, searching staff)
      // Ideally restrict to same-tenant or same-region, but for listing in Admin tools we need read.
      allow read: if isAuthenticated();
      
      // WRITE: Only Admin or the User themselves (during onboarding)
      allow write: if isSystemAdmin() || request.auth.uid == userId;
    }

    // --- 2. SCHEDULING & MESSAGING (Fixing the Error) ---
    
    // Appointments (Global or Regional Root)
    match /appointments/{appointmentId} {
      allow read, write: if isAuthenticated();
    }
    
    // Messages (Inbox)
    match /messages/{messageId} {
       allow read, write: if isAuthenticated();
    }
    
    match /notifications/{notifId} {
        allow read, write: if isAuthenticated();
    }

    // --- 3. CLINICAL DATA (Root Level) ---
    match /students/{document=**} { allow read, write: if isAuthenticated(); } 
    match /cases/{document=**} { allow read, write: if isAuthenticated(); }
    match /reports/{document=**} { allow read, write: if isAuthenticated(); }
    match /consultation_sessions/{document=**} { allow read, write: if isAuthenticated(); }
    
    match /assessment_templates/{id} { allow read, write: if isAuthenticated(); }
    match /assessment_assignments/{id} { allow read, write: if isAuthenticated(); }
    match /assessment_results/{id} { allow read, write: if isAuthenticated(); }

    // --- 4. ADMIN REGISTRIES ---
    match /organizations/{orgId} {
      allow read: if isAuthenticated();
      allow create: if isSystemAdmin();
      allow update: if isSystemAdmin() || isAuthenticated();
    }

    match /org_units/{id} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update, delete: if isSystemAdmin();
    }
    
    match /schools/{id} { allow read: if isAuthenticated(); allow write: if isSystemAdmin(); }
    
    // --- 5. ENTERPRISE TENANTS (Nested) ---
    match /tenants/{tenantId} {
      allow read: if isAuthenticated(); 
      
      match /{allSubcollections=**} {
        allow read, write: if isAuthenticated();
      }
    }

    // --- Default Deny ---
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
