rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- Helper Functions ---
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function getRole() {
      return request.auth.token.role;
    }

    function getTenantId() {
      return request.auth.token.tenantId;
    }

    function isSystemAdmin() {
      let role = getRole();
      return isAuthenticated() && (
        role in ['SuperAdmin', 'Admin', 'admin', 'superadmin']
      );
    }

    function isClinician(tenantId) {
       let role = getRole();
       return isAuthenticated() && (
         role in [
            'EPP', 'epp', 'EducationalPsychologist', 'educationalpsychologist', 
            'ClinicalPsychologist', 'clinicalpsychologist', 'SchoolPsychologist', 
            'TenantAdmin', 'SuperAdmin', 'Admin', 'SchoolAdministrator', 'admin', 'tenantadmin'
         ]
       );
    }

    // --- 1. GLOBAL & ROOT COLLECTIONS ---
    
    match /organization_settings/{id} {
      allow read: if true; 
      allow write: if isSystemAdmin();
    }

    match /translations/{document=**} {
      allow read: if true;
      allow write: if isSystemAdmin();
    }

    match /users/{userId} {
      allow read: if isAuthenticated(); 
      allow write: if isSystemAdmin() || request.auth.uid == userId;
    }

    match /organizations/{orgId} {
      allow read: if isAuthenticated(); 
      allow create: if isSystemAdmin();
      allow update: if isSystemAdmin() || (isAuthenticated() && getTenantId() == orgId);
    }

    // --- 2. TENANT DATA (Shards) ---
    match /tenants/{tenantId} {
      // Allow PUBLIC read for 'global' tenant to support landing page
      // Allow AUTHENTICATED read for matching tenant or admins
      allow read: if tenantId == 'global' || (isAuthenticated() && (getTenantId() == tenantId || isSystemAdmin()));
      
      match /settings/{document=**} {
        allow read: if tenantId == 'global' || (isAuthenticated() && (getTenantId() == tenantId || isSystemAdmin()));
        allow write: if isSystemAdmin() || (isAuthenticated() && getTenantId() == tenantId);
      }
      
      match /i18n/{document=**} {
        allow read: if tenantId == 'global' || (isAuthenticated() && (getTenantId() == tenantId || isSystemAdmin()));
        allow write: if isSystemAdmin();
      }

      match /students/{studentId} {
        allow read: if isSystemAdmin() || (isAuthenticated() && (getTenantId() == tenantId || tenantId == 'default-tenant'));
        allow write: if isSystemAdmin() || isClinician(tenantId);
        match /{sub=**} {
          allow read: if isSystemAdmin() || (isAuthenticated() && (getTenantId() == tenantId || tenantId == 'default-tenant'));
          allow write: if isSystemAdmin() || isClinician(tenantId);
        }
      }

      match /cases/{caseId} {
        allow read: if isSystemAdmin() || (isAuthenticated() && (getTenantId() == tenantId || tenantId == 'default-tenant'));
        allow write: if isSystemAdmin() || isClinician(tenantId);
        match /{sub=**} {
          allow read: if isSystemAdmin() || (isAuthenticated() && (getTenantId() == tenantId || tenantId == 'default-tenant'));
          allow write: if isSystemAdmin() || isClinician(tenantId);
        }
      }

      match /{other=**} {
        allow read, write: if isSystemAdmin() || (isAuthenticated() && getTenantId() == tenantId);
      }
    }

    // --- 3. LEGACY ROOT COLLECTIONS ---
    match /students/{id} { allow read, write: if isSystemAdmin() || (isAuthenticated() && isClinician(null)); }
    match /cases/{id} { allow read, write: if isSystemAdmin() || (isAuthenticated() && isClinician(null)); }
    match /reports/{id} { allow read, write: if isSystemAdmin() || (isAuthenticated() && isClinician(null)); }
    match /schools/{id} { allow read: if isAuthenticated(); allow write: if isSystemAdmin() || (isAuthenticated() && isClinician(null)); }
    match /districts/{id} { allow read: if isAuthenticated(); allow write: if isSystemAdmin(); }
    match /gov_stats/{id} { allow read: if isAuthenticated(); allow write: if isSystemAdmin(); }
    match /policyRules/{id} { allow read: if isAuthenticated(); allow write: if isSystemAdmin(); }
    match /bot_sessions/{id} { 
        allow read, write: if isAuthenticated() && (resource == null || resource.data.userId == request.auth.uid || isSystemAdmin());
        match /messages/{mId} { allow read, write: if isAuthenticated(); }
    }

    match /{document=**} {
      allow read, write: if false;
    }
  }
}
