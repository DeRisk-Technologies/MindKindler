rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- Helper Functions ---
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isSystemAdmin() {
      return isAuthenticated() && (
        request.auth.token.role in ['SuperAdmin', 'Admin', 'admin', 'superadmin']
      );
    }

    // --- 1. GLOBAL ACCESS (Pilot Mode: Relaxed) ---
    // Allow verified users to read/write their own data context
    
    match /user_routing/{userId} {
      allow read: if isAuthenticated();
      // Allow create/update during signup/login repair
      allow write: if isAuthenticated() && request.auth.uid == userId; 
    }

    match /users/{userId} {
      allow read: if isAuthenticated();
      // Allow user to update their own profile (e.g. onboarding)
      allow write: if isAuthenticated() && request.auth.uid == userId;
    }

    // --- 2. KNOWLEDGE & ASSETS ---
    // Fix for Knowledge Page Permission Denied
    match /knowledgeDocuments/{docId} {
      allow read, write: if isAuthenticated();
    }
    
    match /uploaded_documents/{docId} {
      allow read, write: if isAuthenticated();
    }

    // --- 3. CLINICAL DATA (Root Level) ---
    // Broadened for Pilot to prevent "Missing Permissions" blocking critical flows
    match /students/{document=**} { allow read, write: if isAuthenticated(); } 
    match /cases/{document=**} { allow read, write: if isAuthenticated(); }
    match /reports/{document=**} { allow read, write: if isAuthenticated(); }
    match /consultation_sessions/{document=**} { allow read, write: if isAuthenticated(); }
    
    match /assessment_templates/{id} { allow read, write: if isAuthenticated(); }
    match /assessment_assignments/{id} { allow read, write: if isAuthenticated(); }
    match /assessment_results/{id} { allow read, write: if isAuthenticated(); }

    // --- 4. ADMIN & TENANT STRUCTURES ---
    match /organizations/{orgId} {
      allow read, write: if isAuthenticated(); // Relaxed for self-provisioning
    }
    
    match /leas/{leaId} {
        allow read, write: if isAuthenticated();
    }

    match /schools/{id} { 
        allow read, write: if isAuthenticated();
        match /staff/{staffId} { allow read, write: if isAuthenticated(); }
    }
    
    match /tenants/{tenantId} {
      allow read, write: if isAuthenticated(); 
      match /{allSubcollections=**} { allow read, write: if isAuthenticated(); }
    }

    match /integrations/{configId} { allow read, write: if isAuthenticated(); }
    match /data_jobs/{jobId} { allow read, write: if isAuthenticated(); }

    // Default Deny
    match /{document=**} { allow read, write: if false; }
  }
}
