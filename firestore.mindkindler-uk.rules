rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- Helper Functions ---
    
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isSystemAdmin() {
      return isAuthenticated() && (
        request.auth.token.role in ['SuperAdmin', 'Admin', 'admin', 'superadmin']
      );
    }

    function isTenantMatch() {
      return (
        // Check 'tenantId' field if it exists
        (
          resource.data.get('tenantId', '') == request.auth.token.tenantId
        ) ||
        // OR Check 'managedByTenantId' field if it exists
        (
          resource.data.get('managedByTenantId', '') == request.auth.token.tenantId
        )
      );
    }

    // Combined Check for Read/Write
    function isAuthorized() {
      return isAuthenticated() && (
        isSystemAdmin() || 
        (
          // For Writes (Create/Update): Check New Data
          (request.method == 'create' || request.method == 'update') ? 
            (
              request.resource.data.get('tenantId', '') == request.auth.token.tenantId ||
              request.resource.data.get('managedByTenantId', '') == request.auth.token.tenantId
            ) : 
          // For Reads/Delete: Check Existing Data
            isTenantMatch()
        )
      );
    }

    // --- 1. CORE USER & ROUTING ---
    match /user_routing/{userId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && request.auth.uid == userId;
    }

    match /users/{userId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && (request.auth.uid == userId || isSystemAdmin());
    }

    // --- 2. SCHEDULING & MESSAGING ---
    match /appointments/{appointmentId} { allow read, write: if isAuthorized(); }
    
    match /notifications/{notifId} { 
      allow read, write: if isAuthenticated() && (resource == null || resource.data.recipientUserId == request.auth.uid);
    }
    
    match /chats/{chatId} {
        allow read, write: if isAuthenticated() && (resource == null || request.auth.uid in resource.data.participantIds);
        match /messages/{messageId} { allow read, write: if isAuthenticated(); }
    }
    match /messages/{messageId} { allow read, write: if isAuthenticated(); }
    
    // AI Copilot Sessions
    match /bot_sessions/{sessionId} {
        allow read, write: if isAuthorized();
        match /messages/{messageId} { allow read, write: if isAuthorized(); }
    }

    // --- 3. CLINICAL DATA (Root Level) ---
    match /students/{document=**} { allow read, write: if isAuthorized(); } 
    match /cases/{document=**} { allow read, write: if isAuthorized(); }
    match /reports/{document=**} { allow read, write: if isAuthorized(); }
    match /consultation_sessions/{document=**} { allow read, write: if isAuthorized(); }
    match /assessment_results/{id} { allow read, write: if isAuthorized(); }
    match /assessment_assignments/{id} { allow read, write: if isAuthorized(); }
    match /observations/{id} { allow read, write: if isAuthorized(); }

    match /assessment_templates/{id} { 
      allow read: if isAuthenticated(); 
      allow write: if isSystemAdmin();
    }

    // --- 4. ADMIN REGISTRIES ---
    match /organizations/{orgId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated(); 
    }
    
    match /leas/{leaId} {
        allow read: if isAuthenticated();
        allow write: if isAuthenticated();
    }

    match /org_units/{id} {
      allow read, write: if isAuthenticated();
    }
    
    // Schools: STRICT Tenant Scoped
    match /schools/{id} { 
        allow read, write: if isAuthorized();
        match /staff/{staffId} { allow read, write: if isAuthorized(); }
    }
    
    match /districts/{id} {
        allow read, write: if isAuthorized();
    }
    
    // --- 5. ENTERPRISE TENANTS (Nested) ---
    match /tenants/{tenantId} {
      allow read, write: if isSystemAdmin() || (isAuthenticated() && request.auth.token.tenantId == tenantId);
      match /{allSubcollections=**} { 
        allow read, write: if isSystemAdmin() || (isAuthenticated() && request.auth.token.tenantId == tenantId);
      }
    }

    // --- 6. ASSETS & INTEGRATIONS ---
    match /integrations/{configId} { allow read, write: if isAuthorized(); }
    match /data_jobs/{jobId} { allow read, write: if isAuthorized(); }
    
    match /knowledgeDocuments/{docId} { 
      allow read: if isAuthenticated(); 
      allow write: if isAuthenticated(); 
    }
    
    match /uploaded_documents/{docId} { allow read, write: if isAuthorized(); }
    
    // --- 7. MISSING COLLECTIONS (Added for Pilot Unblocking) ---
    match /threads/{threadId} { allow read, write: if isAuthenticated(); }
    match /posts/{postId} { allow read, write: if isAuthenticated(); }
    
    match /trainingModules/{id} { allow read: if isAuthenticated(); allow write: if isSystemAdmin(); }
    match /trainingCompletions/{id} { allow read, write: if isAuthenticated(); } 
    match /certificates/{id} { allow read, write: if isAuthenticated(); }
    
    match /marketplaceItems/{id} { allow read: if isAuthenticated(); allow write: if isSystemAdmin(); }
    match /marketplaceReviews/{id} { allow read, write: if isAuthenticated(); }
    match /marketplacePurchases/{id} { allow read, write: if isAuthorized(); }
    
    match /partners/{id} { allow read, write: if isAuthenticated(); }
    match /partnerStatements/{id} { allow read, write: if isAuthenticated(); }
    match /partnerInvoices/{id} { allow read, write: if isAuthenticated(); }
    match /partnerRevenueLedger/{id} { allow read, write: if isAuthenticated(); }
    match /dealRegistrations/{id} { allow read, write: if isAuthenticated(); }
    
    match /document_staging/{id} { allow read, write: if isAuthorized(); }

    match /{document=**} { allow read, write: if false; }
  }
}
