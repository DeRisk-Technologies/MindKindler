rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- Helper Functions ---
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isSystemAdmin() {
      return isAuthenticated() && (
        request.auth.token.role in ['SuperAdmin', 'Admin', 'admin', 'superadmin']
      );
    }

    // STRICT TENANT CHECK (RELAXED FOR PILOT):
    function isTenantScoped() {
       return isAuthenticated();
    }

    // --- 1. CORE USER & ROUTING ---
    match /user_routing/{userId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && request.auth.uid == userId;
    }

    match /users/{userId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && (request.auth.uid == userId || isSystemAdmin());
    }

    // --- 2. SCHEDULING & MESSAGING ---
    match /appointments/{appointmentId} { allow read, write: if isTenantScoped(); }
    
    match /notifications/{notifId} { 
      allow read, write: if isAuthenticated() && (resource == null || resource.data.recipientUserId == request.auth.uid);
    }
    
    match /chats/{chatId} {
        allow read, write: if isAuthenticated() && (resource == null || request.auth.uid in resource.data.participantIds);
        match /messages/{messageId} { allow read, write: if isAuthenticated(); }
    }
    match /messages/{messageId} { allow read, write: if isAuthenticated(); }
    
    // AI Copilot Sessions
    match /bot_sessions/{sessionId} {
        allow read, write: if isTenantScoped();
        match /messages/{messageId} { allow read, write: if isTenantScoped(); }
    }

    // --- 3. CLINICAL DATA (Root Level) ---
    match /students/{document=**} { allow read, write: if isTenantScoped(); } 
    match /cases/{document=**} { allow read, write: if isTenantScoped(); }
    match /reports/{document=**} { allow read, write: if isTenantScoped(); }
    match /consultation_sessions/{document=**} { allow read, write: if isTenantScoped(); }
    match /assessment_results/{id} { allow read, write: if isTenantScoped(); }
    match /assessment_assignments/{id} { allow read, write: if isTenantScoped(); }
    // New Observation Mode Collection
    match /observations/{id} { allow read, write: if isTenantScoped(); }

    match /assessment_templates/{id} { 
      allow read, write: if isAuthenticated(); 
    }

    // --- 4. ADMIN REGISTRIES ---
    match /organizations/{orgId} {
      allow read, write: if isAuthenticated();
    }
    
    match /leas/{leaId} {
        allow read, write: if isAuthenticated();
    }

    match /org_units/{id} {
      allow read, write: if isAuthenticated();
    }
    
    match /schools/{id} { 
        allow read, write: if isTenantScoped();
        match /staff/{staffId} { allow read, write: if isTenantScoped(); }
    }
    
    match /districts/{id} {
        allow read, write: if isTenantScoped();
    }
    
    // --- 5. ENTERPRISE TENANTS (Nested) ---
    match /tenants/{tenantId} {
      allow read, write: if isAuthenticated();
      match /{allSubcollections=**} { 
        allow read, write: if isAuthenticated();
      }
    }

    // --- 6. ASSETS & INTEGRATIONS ---
    match /integrations/{configId} { allow read, write: if isTenantScoped(); }
    match /data_jobs/{jobId} { allow read, write: if isTenantScoped(); }
    
    match /knowledgeDocuments/{docId} { 
      allow read, write: if isAuthenticated(); 
    }
    
    match /uploaded_documents/{docId} { allow read, write: if isTenantScoped(); }
    
    // --- 7. MISSING COLLECTIONS (Added for Pilot Unblocking) ---
    
    // Community / Forum
    match /threads/{threadId} { allow read, write: if isAuthenticated(); }
    match /posts/{postId} { allow read, write: if isAuthenticated(); }
    
    // Training Academy
    match /trainingModules/{id} { allow read, write: if isAuthenticated(); }
    match /trainingCompletions/{id} { allow read, write: if isAuthenticated(); }
    match /certificates/{id} { allow read, write: if isAuthenticated(); }
    
    // Marketplace
    match /marketplaceItems/{id} { allow read, write: if isAuthenticated(); }
    match /marketplaceReviews/{id} { allow read, write: if isAuthenticated(); }
    match /marketplacePurchases/{id} { allow read, write: if isAuthenticated(); }
    
    // Partner Portal
    match /partners/{id} { allow read, write: if isAuthenticated(); }
    match /partnerStatements/{id} { allow read, write: if isAuthenticated(); }
    match /partnerInvoices/{id} { allow read, write: if isAuthenticated(); }
    match /partnerRevenueLedger/{id} { allow read, write: if isAuthenticated(); }
    match /dealRegistrations/{id} { allow read, write: if isAuthenticated(); }
    
    // Data Operations / Review Queue
    match /document_staging/{id} { allow read, write: if isAuthenticated(); }

    match /{document=**} { allow read, write: if false; }
  }
}
