rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- Helper Functions ---
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function getUserRole() {
       // Only trust the token if it has a valid admin/clinical role.
       // If token says 'parent' (default), check Firestore.
       // This handles the race condition where Signup happens before Claims Propagate.
       let tokenRole = request.auth.token.role;
       return (tokenRole != null && tokenRole != 'parent') 
         ? tokenRole 
         : get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }

    function isSystemAdmin() {
      return isAuthenticated() && (
        getUserRole() in ['SuperAdmin', 'Admin', 'admin', 'superadmin']
      );
    }
    
    function isEPP() {
      let role = getUserRole();
      return isAuthenticated() && (
        role in ['EPP', 'educationalpsychologist', 'EducationalPsychologist']
      );
    }
    
    function isOwner(userId) {
       return isAuthenticated() && request.auth.uid == userId;
    }

    // --- 1. CORE USER & ROUTING ---
    match /user_routing/{userId} {
      allow read, write: if isAuthenticated();
    }

    match /users/{userId} {
      allow read: if isAuthenticated();
      // Allow user to fix their own profile (auto-correction logic)
      allow write: if isSystemAdmin() || request.auth.uid == userId;
    }

    // --- 2. SCHEDULING & MESSAGING ---
    match /appointments/{appointmentId} { allow read, write: if isAuthenticated(); }
    match /messages/{messageId} { allow read, write: if isAuthenticated(); }
    match /notifications/{notifId} { allow read, write: if isAuthenticated(); }
    match /chats/{chatId} {
        allow read, write: if isAuthenticated();
        match /messages/{messageId} { allow read, write: if isAuthenticated(); }
    }

    // --- 3. CLINICAL DATA (Root Level) ---
    match /students/{document=**} { allow read, write: if isAuthenticated(); } 
    match /cases/{document=**} { allow read, write: if isAuthenticated(); }
    match /reports/{document=**} { allow read, write: if isAuthenticated(); }
    match /consultation_sessions/{document=**} { allow read, write: if isAuthenticated(); }
    match /assessment_templates/{id} { allow read, write: if isAuthenticated(); }
    match /assessment_assignments/{id} { allow read, write: if isAuthenticated(); }
    match /assessment_results/{id} { allow read, write: if isAuthenticated(); }

    // --- 4. ADMIN REGISTRIES ---
    match /organizations/{orgId} {
      allow read: if isAuthenticated();
      allow create: if isSystemAdmin();
      allow update: if isSystemAdmin() || isAuthenticated();
    }
    
    match /leas/{leaId} {
        allow read: if isAuthenticated();
        allow write: if isAuthenticated(); // Broaden write to catch-all for pilot
    }

    match /org_units/{id} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update, delete: if isSystemAdmin();
    }
    
    match /schools/{id} { 
        allow read: if isAuthenticated(); 
        allow write: if isAuthenticated(); // Broaden write to catch-all for pilot
        
        match /staff/{staffId} { allow read, write: if isAuthenticated(); }
    }
    
    // --- 5. ENTERPRISE TENANTS (Nested) ---
    match /tenants/{tenantId} {
      allow read: if isAuthenticated(); 
      match /{allSubcollections=**} { allow read, write: if isAuthenticated(); }
    }

    // --- 6. INTEGRATIONS ---
    match /integrations/{configId} { allow read, write: if isAuthenticated(); }
    match /data_jobs/{jobId} { allow read, write: if isAuthenticated(); }

    match /{document=**} { allow read, write: if false; }
  }
}
