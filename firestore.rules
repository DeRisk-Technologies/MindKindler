rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isTenantMember(tenantId) {
      return isAuthenticated() && 
        (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.tenantId == tenantId ||
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'global_admin');
    }

    function isGlobalAdmin() {
       return isAuthenticated() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'global_admin';
    }

    // Existing rules...
    
    // --- MindKindler Community Rules ---

    // Tenant-specific Forum
    match /tenants/{tenantId}/forum/categories/{categoryId} {
      allow read: if isTenantMember(tenantId);
      allow write: if isTenantMember(tenantId) && (request.resource.data.authorId == request.auth.uid || isGlobalAdmin()); // Simplified for MVP
    }

    match /tenants/{tenantId}/forum/threads/{threadId} {
      allow read: if isTenantMember(tenantId);
      allow create: if isTenantMember(tenantId) && request.resource.data.authorId == request.auth.uid;
      allow update: if isTenantMember(tenantId) && (request.resource.data.authorId == request.auth.uid || isGlobalAdmin()); // Add moderation checks later
      
      match /posts/{postId} {
        allow read: if isTenantMember(tenantId);
        allow create: if isTenantMember(tenantId) && request.resource.data.authorId == request.auth.uid;
        allow update: if isTenantMember(tenantId) && (request.resource.data.authorId == request.auth.uid || isGlobalAdmin());
      }
    }

    // Tenant-specific Wiki
    match /tenants/{tenantId}/wiki/pages/{pageId} {
       allow read: if isTenantMember(tenantId);
       allow create: if isTenantMember(tenantId); // Refine to specific roles later
       allow update: if isTenantMember(tenantId);
    }

    // Tenant-specific Blog
    match /tenants/{tenantId}/blog/posts/{postId} {
       allow read: if isTenantMember(tenantId); // Or public if configured
       allow write: if isTenantMember(tenantId); // Restrict to editors later
    }

    // Global Public Forum (Read-only for now for most, write for global members)
    match /global/forum/{document=**} {
      allow read: if isAuthenticated(); // Or true for public
      allow write: if isGlobalAdmin(); 
    }
    
    // Global Wiki
    match /global/wiki/pages/{pageId} {
      allow read: if isAuthenticated();
      allow write: if isGlobalAdmin();
    }
  }
}
