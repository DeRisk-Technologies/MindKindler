{
  "id": "uk_la_pack",
  "name": "UK Local Authority Standard (EYFS 2025)",
  "description": "Statutory compliance pack including First Day Calling, WISC-V norms, and EHCP templates.",
  "version": "1.1.0",
  "releaseDate": "2024-06-01",
  "changelog": "Added One Page Profile, refined Neuro questionnaire, and included DfE 2025 Attendance Codes (C2).",
  "regionTags": [
    "UK",
    "Europe"
  ],
  "actions": [],
  "capabilities": {
    "countryCode": "UK",
    "digitalForms": [
      {
        "id": "uk_school_contribution",
        "title": "School Contribution to Statutory Assessment",
        "description": "Standard form for SENCOs to report attainment and provisions (Appendix A).",
        "sections": [
          {
            "id": "attainment",
            "title": "Current Attainment",
            "fields": [
              { "id": "reading_age", "label": "Reading Age", "type": "number", "required": true },
              { "id": "spelling_age", "label": "Spelling Age", "type": "number", "required": true },
              { "id": "maths_level", "label": "Maths Level (NC)", "type": "string", "required": true }
            ]
          },
          {
            "id": "attendance",
            "title": "Attendance History",
            "fields": [
              { "id": "att_percent", "label": "Current Attendance %", "type": "number", "required": true },
              { "id": "att_code_count", "label": "Unauthorized Absences (Code O/G/U)", "type": "number", "required": false },
              { 
                "id": "primary_absence_reason", 
                "label": "Primary Reason for Absence (DfE 2025)", 
                "type": "select", 
                "options": ["I (Illness)", "M (Medical)", "C2 (Part-time Timetable)", "G (Family Holiday)", "O (Unauthorised)"],
                "required": false 
              },
              { "id": "lates", "label": "Number of Lates (Code L)", "type": "number", "required": false }
            ]
          },
          {
            "id": "behavior",
            "title": "Behavior Log",
            "fields": [
              { "id": "exclusions", "label": "Fixed Term Exclusions (Days)", "type": "number", "required": false },
              { "id": "isolations", "label": "Internal Isolations (Count)", "type": "number", "required": false },
              { "id": "triggers", "label": "Known Triggers", "type": "textarea", "required": false }
            ]
          },
          {
            "id": "provisions",
            "title": "Current Provisions (Wave 2/3)",
            "fields": [
              { "id": "interventions_list", "label": "List current interventions and impact", "type": "textarea", "required": true },
              { "id": "support_hours", "label": "Weekly Support Hours (LSA)", "type": "number", "required": true }
            ]
          }
        ]
      },
      {
        "id": "nhs_neuro_questionnaire",
        "title": "Neurodevelopmental Screening (NICE Guidelines)",
        "description": "Pre-assessment screening for ADHD/ASD traits.",
        "sections": [
          {
            "id": "social",
            "title": "Social Interaction",
            "fields": [
              { 
                "id": "q_peers", 
                "label": "Interaction with peers (e.g., turn-taking, sharing).", 
                "type": "likert", 
                "options": ["Age Appropriate", "Mild Concern", "Significant Concern"],
                "required": true 
              },
              { 
                "id": "q_cues", 
                "label": "Understanding of non-verbal cues and sarcasm.", 
                "type": "likert", 
                "options": ["Age Appropriate", "Mild Concern", "Significant Concern"],
                "required": true 
              }
            ]
          },
          {
            "id": "attention",
            "title": "Attention & Concentration",
            "fields": [
              { 
                "id": "q1_focus", 
                "label": "Difficulty sustaining attention in tasks or play activities.", 
                "type": "likert", 
                "options": ["Never", "Rarely", "Sometimes", "Often", "Very Often"],
                "required": true 
              },
              { 
                "id": "q2_instructions", 
                "label": "Does not seem to listen when spoken to directly.", 
                "type": "likert", 
                "options": ["Never", "Rarely", "Sometimes", "Often", "Very Often"],
                "required": true 
              }
            ]
          },
          {
            "id": "impulsivity",
            "title": "Hyperactivity & Impulsivity",
            "fields": [
              { 
                "id": "q3_fidget", 
                "label": "Fidgets with or taps hands or feet or squirms in seat.", 
                "type": "likert", 
                "options": ["Never", "Rarely", "Sometimes", "Often", "Very Often"],
                "required": true 
              },
              { 
                "id": "q4_interrupt", 
                "label": "Interrupts or intrudes on others.", 
                "type": "likert", 
                "options": ["Never", "Rarely", "Sometimes", "Often", "Very Often"],
                "required": true 
              }
            ]
          }
        ]
      },
      {
        "id": "uk_one_page_profile",
        "title": "The One Page Profile",
        "description": "Person-Centered 'Voice of the Child' capture.",
        "sections": [
          {
            "id": "appreciation",
            "title": "What people appreciate about me",
            "fields": [
              { "id": "strengths", "label": "Positive qualities and strengths", "type": "textarea", "required": true }
            ]
          },
          {
            "id": "important",
            "title": "What is important to me",
            "fields": [
              { "id": "interests", "label": "Hobbies, people, and things that matter", "type": "textarea", "required": true }
            ]
          },
          {
            "id": "support",
            "title": "How to support me",
            "fields": [
              { "id": "strategies", "label": "What helps me learn and stay calm?", "type": "textarea", "required": true }
            ]
          }
        ]
      }
    ],
    "statutory_timeline": {
      "process_name": "EHCP Needs Assessment",
      "total_weeks": 20,
      "stages": [
        {
          "week_start": 0,
          "week_end": 6,
          "name": "Evidence Gathering (Advice Seeking)",
          "actor": "EPP",
          "deadline_action": "submit_report"
        },
        {
          "week_start": 6,
          "week_end": 16,
          "name": "Drafting & Moderation",
          "actor": "LA Officer",
          "deadline_action": "issue_draft_plan"
        },
        {
          "week_start": 16,
          "week_end": 20,
          "name": "Consultation & Finalization",
          "actor": "LA & Parents",
          "deadline_action": "issue_final_plan"
        }
      ],
      "rules": [
        {
          "condition": "current_week > 5 AND status != 'submitted'",
          "action": "trigger_alert",
          "alert_level": "critical",
          "message": "Statutory Breach Risk: Educational Advice is overdue (Week 6 Deadline)."
        }
      ]
    },
    "schemaExtensions": {
      "student": [
        {
          "fieldName": "uk_upn",
          "label": "Unique Pupil Number (UPN)",
          "type": "string",
          "validationRegex": "^[A-Z][0-9]{12}$",
          "required": true,
          "encrypt": false
        },
        {
          "fieldName": "uk_pupil_premium",
          "label": "Pupil Premium Eligible",
          "type": "boolean",
          "required": false,
          "encrypt": false
        },
        {
          "fieldName": "uk_sen_status",
          "label": "SEN Status",
          "type": "enum",
          "options": [
            "E",
            "K",
            "N"
          ],
          "required": true,
          "encrypt": false,
          "description": "E = EHCP, K = SEN Support, N = No SEN"
        },
        {
          "fieldName": "uk_fsm_eligible",
          "label": "Free School Meals (FSM)",
          "type": "boolean",
          "required": false,
          "encrypt": false
        }
      ],
      "school": [],
      "staff": [
        {
          "fieldName": "scr_dbs_number",
          "label": "DBS Certificate Number",
          "type": "string",
          "required": true,
          "encrypt": true,
          "description": "Enhanced DBS Number for Single Central Record (SCR)"
        },
        {
          "fieldName": "scr_dbs_issue_date",
          "label": "DBS Issue Date",
          "type": "date",
          "required": true,
          "encrypt": false
        },
        {
          "fieldName": "scr_prohibition_check",
          "label": "Prohibition from Teaching Check",
          "type": "boolean",
          "required": true,
          "encrypt": false
        },
        {
          "fieldName": "scr_right_to_work",
          "label": "Right to Work in UK Verified",
          "type": "boolean",
          "required": true,
          "encrypt": false
        }
      ]
    },
    "complianceWorkflows": [
      {
        "id": "uk_first_day_calling",
        "name": "First Day Calling (EYFS)",
        "trigger": "attendance_logged",
        "condition": "status == 'unexplained'",
        "action": "create_case",
        "slaHours": 0.5
      },
      {
        "id": "uk_scr_dbs_renewal",
        "name": "DBS Renewal Warning (SCR)",
        "trigger": "schedule_daily",
        "target": "StaffProfile",
        "condition": "scr_dbs_issue_date < (NOW - 3 years + 90 days)",
        "action": "create_notification",
        "payload": {
          "message": "Urgent: Staff member {{name}} requires DBS renewal in <90 days. Statutory breach risk.",
          "priority": "high"
        }
      }
    ],
    "consultationTemplates": [
      {
        "id": "uk_person_centered_consultation",
        "title": "Person-Centered Consultation",
        "description": "Focus on the child's voice, aspirations, and strengths.",
        "system_prompt": "You are an assistant for a Person-Centered interview. Focus on the child's voice, aspirations, and strengths. Do not jump to pathology.",
        "required_sections": [
          "Views of Child",
          "Aspirations",
          "Barriers"
        ],
        "tags": ["clinical", "student_voice"]
      },
      {
        "id": "uk_multi_agency_meeting",
        "title": "Multi-Agency Meeting",
        "description": "Inter-operability between Health, Social Care, and Education.",
        "system_prompt": "Focus on inter-operability between Health, Social Care, and Education.",
        "required_sections": [
          "Health Inputs",
          "Social Care Inputs",
          "Educational Outcomes",
          "Action Plan"
        ],
        "tags": ["multi_agency", "statutory"]
      },
      {
        "id": "uk_complex_consultation",
        "title": "Complex Case Consultation (Systemic)",
        "description": "For high-complexity cases (EBSA, Trauma, LAC) using a Bio-Psycho-Social formulation.",
        "system_prompt": "You are an expert Clinical Psychologist assistant acting in a 'Complex Case' mode. Use a Bio-Psycho-Social model. Identify Risk Factors, Protective Factors, and Systemic Loops (Circular Causality). Flag safeguarding concerns immediately.",
        "required_sections": [
          "Presenting Concerns (Systemic)",
          "Bio-Psycho-Social Factors",
          "Hypothesis / Formulation",
          "Intervention Plan (Home/School/Community)"
        ],
        "tags": ["clinical", "complex", "safeguarding"]
      }
    ],
    "psychometricConfig": {
      "standardScoreMean": 100,
      "standardScoreSD": 15,
      "deviationThresholds": {
        "mild": 85,
        "significant": 70
      },
      "confidenceInterval": 95,
      "discrepancySignificance": 15
    },
    "statutoryReports": [
      {
        "id": "ehcp_needs_assessment",
        "name": "EHCP Needs Assessment",
        "sections": [
          {
            "id": "section_a",
            "title": "Section A: Views of Child",
            "promptId": "ehcp_sec_a"
          },
          {
            "id": "section_b",
            "title": "Section B: Special Educational Needs",
            "promptId": "ehcp_sec_b"
          },
          {
            "id": "section_f",
            "title": "Section F: Provision",
            "promptId": "ehcp_sec_f"
          }
        ],
        "constraints": [
          "no_medical_diagnosis",
          "use_tentative_language"
        ]
      }
    ],
    "interventionLogic": [
      {
        "id": "uk_elklan_vci",
        "domain": "VCI",
        "threshold": 85,
        "programName": "ELKLAN Language Builders",
        "description": "Structured oral language support for low Verbal Comprehension.",
        "evidenceLevel": "gold"
      },
      {
        "id": "uk_talk_boost_vci",
        "domain": "VCI",
        "threshold": 85,
        "programName": "Talk Boost (KS1/KS2)",
        "description": "Targeted intervention for narrowing the language gap.",
        "evidenceLevel": "silver"
      },
      {
        "id": "uk_cogmed_wmi",
        "domain": "WMI",
        "threshold": 80,
        "programName": "Cogmed Working Memory Training",
        "description": "Digital adaptive training for working memory deficits.",
        "evidenceLevel": "silver"
      },
      {
        "id": "uk_memory_fix_wmi",
        "domain": "WMI",
        "threshold": 80,
        "programName": "Memory Fix Strategies",
        "description": "Compensatory classroom strategies (chunking, visual aids).",
        "evidenceLevel": "gold"
      }
    ]
  }
}
